@model CreateCameraBindingModel
@{
    ViewData["Title"] = "Add Camera";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-6">
        <form  method="post">
            <h4>Create a new camera.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Make"></label>
               <select class="form-control" asp-for="Make" asp-items="Html.GetEnumSelectList<CameraMake>()"></select>
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinShutterSpeed"></label>
                <input asp-for="MinShutterSpeed" class="form-control" />
                <span asp-validation-for="MinShutterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxShutterSpeed"></label>
                <input asp-for="MaxShutterSpeed" class="form-control" />
                <span asp-validation-for="MaxShutterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinIso"></label>
                <select class="form-control" asp-for="MinIso" asp-items="Html.GetEnumSelectList<MinIso>()"></select>
                <span asp-validation-for="MinIso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxIso"></label>
                <input asp-for="MaxIso" step="100" min="200" max="409600" class="form-control" />
                <span asp-validation-for="MaxIso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsFullFrame"></label>
                Yes @Html.RadioButtonFor(m=> m.IsFullFrame,true)
                No @Html.RadioButtonFor(m=> m.IsFullFrame,false)
                <span asp-validation-for="IsFullFrame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoResolution"></label>
                <input asp-for="VideoResolution"  class="form-control" />
                <span asp-validation-for="VideoResolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LightMetering"></label>
                @foreach (var enumValue in Enum.GetValues(typeof(LightMeteringType)).Cast<LightMeteringType>())
                {
                    <input type="checkbox" name="@nameof(LightMeteringType)" value="@((int)enumValue)"/>@: @enumValue.ToDisplayName()
                }
                <span asp-validation-for="VideoResolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
    
    
      
            <button type="submit" class="btn btn-default">Add Camera</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}