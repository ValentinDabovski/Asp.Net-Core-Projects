
@model CameraDeleteViewModel
@{
    ViewData["Title"] = "Delete Camera";
    var cameraId = new Dictionary<string, string>(){{"Id",Model.Id.ToString()}};
    
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <div class="jumbotron">
                <h3 class="text-danger">Are you sure you want to delete camera</h3>
                <h3 class="text-warning">@Model.Make @Model.Model with price @($"${Model.Price:F2}")</h3>

                <form method="post" class="form-group" asp-action="Destroy" asp-controller="Camera">
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" asp-all-route-data="@cameraId" class="btn btn-danger">
                    <a asp-action="UserAllCameras" class="btn btn-warning">Back</a>
                </form>

            </div>
        </div>
    </div>
</div>
