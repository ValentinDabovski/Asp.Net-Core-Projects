@model EditCourseBinddingModel
@{
    ViewData["Title"] = "Edit Course";
    
}


<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Courses" asp-area="Admin" method="post">
            <h4>Create new course.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="10" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndtDate"></label>
                <input asp-for="EndtDate" class="form-control" />
                <span asp-validation-for="EndtDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainerId"></label>
                <select asp-for="TrainerId" asp-items="@Model.Trainers" class="form-control"></select>
                <span asp-validation-for="TrainerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id"/>
            </div>
            <button type="submit" class="btn btn-default">Edit Course</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
