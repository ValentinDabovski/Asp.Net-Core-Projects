@model PartAddModel
@{
    ViewData["Title"] = "Add Part";
}
<h2>@ViewData["Title"]</h2>

<form class="form-group" asp-action="Add" asp-controller="Parts" method="post">
    <div class="row">
        <div class="col-lg-6">
            <label asp-for="PartName"></label>
            <input class="form-control" asp-for="PartName" />
            <span asp-validation-for="PartName"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-6">
            <label asp-for="PartPrice"></label>
            <input class="form-control" asp-for="PartPrice" />
            <span asp-validation-for="PartPrice"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-6">
            <label asp-for="Quantity"></label>
            <input class="form-control" min="1" asp-for="Quantity" />
            <span asp-validation-for="Quantity"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-6">
            <label asp-for=SupplierId></label>
            <select class="form-control" asp-for="SupplierId" asp-items="@Model.Suppliers"></select>
            <span asp-validation-for="SupplierId"></span>
        </div>
    </div>
    <br />
    <input type="submit" class="btn btn-success" value="Add Part"/>
</form>