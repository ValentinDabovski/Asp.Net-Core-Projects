@model DeletePartModel
@{
    ViewData["Title"] = "Delete Part";
    var partId = new Dictionary<string,string>(){{"Id",Model.Id.ToString()}};
}

<h2>Delete Part</h2>

<div class="jumbotron">
    <div class="text-danger text-center">
        <h3>Are you sure you want to delete part</h3><h3 class="text-warning">@Model.PartName</h3><h3>with price @Model.PartPrice</h3>
    </div>
    <br />
    <form asp-action="Delete" asp-controller="Parts" class="form-group" method="post">
        <div class="text-center">
            <a asp-action="All" asp-controller="Parts" class="btn btn-default">Go Back</a>
            <input type="submit" class="btn btn-danger" value="Delete" asp-all-route-data="@partId" />
        </div>
    </form>
</div>