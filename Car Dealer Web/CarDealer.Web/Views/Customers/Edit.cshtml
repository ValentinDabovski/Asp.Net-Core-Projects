@model CustomerModel

@{
    ViewData["Title"] = "Edit Customer";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" asp-controller="Customers" method="post" class="form-group">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name"  class="form-control"  placeholder="Name" />
        <span class="text-warning text-capitalize" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate"  class="form-control" placeholder="Year/Month/Day" />
        <span class="text-warning text-capitalize" asp-validation-for="BirthDate"></span>
    </div>
    <a asp-action="All" asp-controller="Customers" class="btn btn-default">Go Back</a>
    <input type="submit" value="Edit Customer" class="btn btn-success" />
</form>
