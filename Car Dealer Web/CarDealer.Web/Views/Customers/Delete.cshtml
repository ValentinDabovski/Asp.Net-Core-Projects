@model CustomerDeleteModel
@{
    ViewData["Title"] = "Delete Customer";
    var customerId = new Dictionary<string, string>(){{"Id",Model.Id.ToString()}};
}

<h2>@ViewData["Title"]</h2>


<div class="jumbotron">
    <div class="text-danger text-center">
        <h3>Are you sure you want to delete customer @Model.Name</h3>
    </div>
    <br/>
    <form asp-action="Delete" asp-controller="Customers" class="form-group" method="post">
        <div class="text-center">
            <a asp-action="All" asp-controller="Customers" class="btn btn-default">Go Back</a>
            <input type="submit" class="btn btn-danger" value="Delete" asp-all-route-data="@customerId"/>
        </div>
    </form>
</div>